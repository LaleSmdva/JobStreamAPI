@model List<CompaniesDto>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<div class="col-lg-6 mx-auto stretch-card ">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hoverable Table</h4>
            <p class="card-description">
            </p>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Id</th>
                            <th>Name</th>
                            @*<th>Status</th>*@
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr class="text-light">
                                <td>@count</td>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>